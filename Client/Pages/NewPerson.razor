@page "/person/new"
@using System.Net
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PersonForm Person="@person" ButtonText="Create Person" FormTitle="Add Person" OnValidSubmit="@CreatePerson"/>

@code {
    Person person = new Person();
    
    async Task CreatePerson() {
        HttpResponseMessage httpResponse = await Http.PostAsJsonAsync("Person/Create", person);
        if (httpResponse.Content.ReadAsStringAsync().Result == "DuplicateSIN") {
            Snackbar.Add("SIN already exists, unable to proceed", Severity.Error);
        } else if (httpResponse.StatusCode == HttpStatusCode.OK) {
            Snackbar.Add("Person entry created successfully", Severity.Success);
            NavigationManager.NavigateTo("/people");
        } else {
            Snackbar.Add("Failed to create new person", Severity.Error);
        }
    }
}